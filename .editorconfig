# Definições para todos os arquivos
[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Regras específicas para arquivos JavaScript
[*.js]
indent_size = 2

# Regras para arquivos HTML e CSS
[*.html]
indent_size = 2

[*.css]
indent_size = 2